{{< core/modal }}
    {{$title}}{{#str}} code:get, block_enrolcode {{/str}}{{/title}}
    {{$body}}
        <div class="container" style="text-align: center;">
            <h1 id="code">{{code}}</h1>
            <img src="" alt="QR Code" id="qrcode" />
            <div style="width: 100%;">
                <input type="text" id="enrolurl" readonly style="width: 100%;">
            </div>
        </div>
    {{/body}}
